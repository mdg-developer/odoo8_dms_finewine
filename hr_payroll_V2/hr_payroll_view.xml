<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record model="ir.ui.view" id="view_hr_payslip_customize_form">
			<field name="name">hr.payslip.view.form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
			<field name="arch" type="xml">
				<xpath expr="//tree/field[@name='number_of_hours']" position="after">
					<field name="total_month_day" invisible="1"/>
                    <field name="working_month" invisible="1"/>					
				</xpath>
				<xpath expr="//label[@for='date_from']" position="before">
					<field name="badge_id"/>
				</xpath>
				<xpath expr="//field[@name='credit_note']" position="after">
					<field name="remark1"/>
					<field name="remark2"/>
				</xpath>
			</field>
		</record>  
		
		<record id="inherit_view_hr_payslip_filter" model="ir.ui.view">
            <field name="name">hr.payslip.select</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_filter" />
            <field name="arch" type="xml">               
                <xpath expr="//filter[@string='States']" position="after">
                     <filter string="Date" icon="terp-personal" name="date_to" context="{'group_by':'date_to'}"/>
                </xpath>                              
            </field>
        </record>    
                     
    </data>
</openerp>
