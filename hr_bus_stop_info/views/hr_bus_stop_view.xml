<openerp>
  <data>    
    
    <!--Bus Stop tree -->
    <record model="ir.ui.view" id="view_bus_stop_tree">
        <field name="name">hr.bus.stop.tree</field>
        <field name="model">hr.bus.stop</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Bus Stop">
                <field name="name"/>                                
            </tree>
        </field>
    </record>
    <!--Bus No Tree -->
    <record model="ir.ui.view" id="view_bus_no_tree">
        <field name="name">hr.bus.no.tree</field>
        <field name="model">hr.bus</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Bus">
                <field name="name"/>                                
            </tree>
        </field>
    </record>
    
     <!-- Bus Stop form -->
    <record model="ir.ui.view" id="view_bus_stop_form">
        <field name="name">hr.bus.stop.form</field>
        <field name="model">hr.bus.stop</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Bus Stop">
                <group col="4">
	                <field name="name"/>              
	            </group>               
               
            </form>
        </field>
    </record>
    <!--Bus No Form-->
     <record model="ir.ui.view" id="view_bus_no_form">
        <field name="name">hr.bus.no.form</field>
        <field name="model">hr.bus</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Bus">
                <group col="4">
	                <field name="name"/>              
	            </group>               
            </form>
        </field>
    </record>
     <!-- Menu -->
    <record model="ir.actions.act_window" id="open_view_bus_stop_form">
        <field name="name">Bus Stop</field>
        <field name="res_model">hr.bus.stop</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="open_view_bus_no_form">
        <field name="name">Bus</field>
        <field name="res_model">hr.bus</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem name="Bus Stop"
              parent="hr.menu_hr_configuration"
              id="menu_bus_stop_view_form"
              action="open_view_bus_stop_form" sequence="7" />
    <menuitem name="Bus No"
              parent="hr.menu_hr_configuration"
              id="menu_view_bus_no_form"
              action="open_view_bus_no_form" sequence="8" />
	
    <record id="view_employee_bus_stop_tree_view" model="ir.ui.view">
			<field name="name">hr.employee.tree.inheritance</field>
			<field name="model">hr.employee</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="hr.view_employee_tree" />
			<field name="arch" type="xml">			
				<field name="department_id" position="before">
					<field name="bus_stop_id" />	
					<field name="bus_id" />					
				</field>				
			</field>
	</record>
	
		
    <record id="view_employee_filter" model="ir.ui.view">
            <field name="name">Employees</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <field name="department_id" position="after">
                    <field name="bus_stop_id"/>
                    <filter string="Bus Stop " icon="terp-personal" domain="[]" context="{'group_by':'bus_stop_id'}"/>
                    <filter string="Bus No " icon="terp-personal" domain="[]" context="{'group_by':'bus_id'}"/>
                </field>
                </field>
            <!--     <filter string="Length " position="after">
                	<filter string="Bus Stop " icon="terp-personal" domain="[]" context="{'group_by':'bus_stop_id'}"/>
                </filter> -->
           
    </record>
        
     <record model="ir.ui.view" id="view_employee_nrc_form_inherit">
        <field name="name">hr.training.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">   			
			<xpath expr="//field[@name='work_location']" position="after">
				<field name="bus_stop_id" />
				<field name="bus_id" />	

			</xpath>
        </field>
    </record>   
  </data>
</openerp>
