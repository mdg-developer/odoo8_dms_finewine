<?xml version="1.0"?>
<openerp>
	<data>
		
		<record id="view_route_day_setting_form" model="ir.ui.view">
			<field name="name">route.day.setting.form</field>
			<field name="model">route.day.setting</field>
			<field name="arch" type="xml">
				<form>
				    <sheet>
				        <group>
					        <group>
					            <field name="sale_team_id" />
					            <field name="total_customer" readonly="1"/>		
					            <button name="retrieve_data" string="Retrieve" type="object"
									widget="statinfo" class="oe_highlight" />
					            <button name="refresh_new_customer" string="Fresh New Customer" type="object"
									widget="statinfo" class="oe_highlight" />				            
					        </group>
					        <group>
					            <field name="create_date" readonly="1"/>
					            <field name="write_date" readonly="1"/>
					            <field name="write_uid" readonly="1"/>
					        </group>
					    </group>
					    <notebook>
                        	<page string="Customer Lines">
                            	<field name="p_line">
                            	    <tree editable="bottom">
                            	        <field name="sequence" widget="handle"/>  
                            	        <field name="line_no" readonly="1"/>
                            	        <field name="partner_id" readonly="1"/>
                            	        <field name="township_id" readonly="1"/>
                            	        <field name="street" readonly="1"/>   
                            	        <field name="route_day_id"/>
                            	        <field name="frequency_id"/>
                            	        <field name="seq" />                              	        
                            	        <field name="remark"/>    
                            	        <field name="day_count" readonly="1" invisible="1"/>  
                            	        <button name="unassign" string="Unassign" type="object"
											widget="statinfo" class="oe_highlight" />	                        	        
                            	    </tree>
                            	</field>
                           </page>
                        </notebook>
				    </sheet>				    
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_route_day_setting_tree">
			<field name="name">route.day.setting.tree</field>
			<field name="model">route.day.setting</field>
			<field name="arch" type="xml">
				<tree string="Route Day Setting">
				    <field name="create_date" />
					<field name="sale_team_id" />
					<field name="total_customer" />
					<field name="write_date" />
					<field name="write_uid" />
				</tree>
			</field>
		</record>

		<record id="action_route_day_setting_view" model="ir.actions.act_window">
			<field name="name">Route Day Setting Setup</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">route.day.setting</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_route_day_setting_tree" />
		</record>

		<record id="view_route_day_setting_filter" model="ir.ui.view">
			<field name="name">route.day.setting.select</field>
			<field name="model">route.day.setting</field>
			<field name="arch" type="xml">
				<search string="Search Route Day Setting">
					<group expand="0" string="Group By...">
						<filter string="Sales Team" domain="[]" context="{'group_by':'sales_team_id'}" />
					</group>
				</search>
			</field>
		</record>		
		
		<menuitem id="menu_route_day_setting_form" parent="ms_route_day_setting.menu_route_day"
			name="Route Day Setting" action="action_route_day_setting_view"
			sequence="2" />
		
		<record model="ir.ui.view" id="view_route_day_unassign_dialog_form">
            <field name="name">route.day.unassign.dialog.form</field>
            <field name="model">route.day.unassign</field>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <form string="Unassign">
                    <p>
                        Do you want to unassign your related sales team for this customer?   
                    </p>                                     
                    <footer>
                        <button name="unassign" string="Yes" class="oe_highlight" type="object"/> or
                        <button string="No" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

	</data>
</openerp>