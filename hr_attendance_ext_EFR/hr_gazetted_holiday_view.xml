<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="view_hr_gazetted_holiday_form" model="ir.ui.view">
			<field name="name">Gazetted Holiday</field>
			<field name="model">hr.gazetted.holiday</field>
			<field name="arch" type="xml">
				<form string="Gazetted Holiday" version="7.0">
					<sheet>
						<group>
							<field name="name" />
							<field name="date" />
							<field name="year" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_hr_gazetted_holiday_tree" model="ir.ui.view">
			<field name="name">Gazetted Holiday</field>
			<field name="model">hr.gazetted.holiday</field>
			<field name="arch" type="xml">
				<tree string="Gazetted Holiday">
					<field name="name" />
					<field name="date" />
					<field name="year" />
				</tree>
			</field>
		</record>

		<record id="view_holiday_filter" model="ir.ui.view">
			<field name="name">Holiday</field>
			<field name="model">hr.gazetted.holiday</field>
			<field name="arch" type="xml">
				<search string="Holidays">
					<field name="name" string="Holidays" />
					<field name="date" />
					<field name="year" />
					<group expand="0" string="Group By...">
						<filter string="name" icon="terp-personal" domain="[]"
							context="{'group_by':'name'}" />
						<filter string="year" icon="terp-personal" domain="[]"
							context="{'group_by':'year'}" />
					</group>
				</search>
			</field>
		</record>

		<!-- Action -->
		<record id="action_hr_gazetted_holiday" model="ir.actions.act_window">
			<field name="name">Gazetted Holiday</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.gazetted.holiday</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_hr_gazetted_holiday_tree" />
			<field name="search_view_id" ref="view_holiday_filter" />
		</record>

		<menuitem id="menu_hr_gazetted_holiday" name="Gazetted Holiday"
			parent="hr_holidays.menu_open_ask_holidays" action="action_hr_gazetted_holiday"
			sequence="21" groups="base.group_user" />

	</data>
</openerp>