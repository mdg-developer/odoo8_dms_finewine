 					</page>
 					
                </xpath>
            </field>
        </record>
        
        <record id="action_account_financial_report_branch" model="ir.actions.act_window">
             <field name="name">Financial Reports</field>
             <field name="res_model">account.financial.report.branch</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="accounting_financial_report_branch_view"/>
             <field name="target">new</field>
        </record>
        <menuitem icon="STOCK_PRINT" name="Financial Report" action="account_financial_report_branches_analytic.action_account_financial_report_branch" id="account.menu_account_report" parent="account.final_accounting_reports" sequence="100"/>
	</data>
</openerp>
