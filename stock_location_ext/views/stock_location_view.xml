<openerp>
    <data>
        <record id="view_stock_location_group_form" model="ir.ui.view">
            <field name="name">stock.location.group.form</field>
            <field name="model">stock.location.group</field>
            <field name="arch" type="xml">
                <form string="Stock Location Group" version="7.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_stock_location_group_tree" model="ir.ui.view">
            <field name="name">stock.location.group.tree</field>
            <field name="model">stock.location.group</field>
            <field name="arch" type="xml">
                <tree string="Stock Location Group">
                    <field name="name"/>
                </tree>
            </field>
        </record>

		<record id="action_stock_location_group_tree" model="ir.actions.act_window">
			<field name="name">Stock Location Group</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">stock.location.group</field>
			<field name="view_type">tree</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" eval="view_stock_location_group_tree" />
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to create new location group
				</p>
			</field>
		</record>

		<menuitem name="Stock Location Group" parent="stock.menu_stock_configuration"
			id="menu_open_stock_location_group_form" action="action_stock_location_group_tree"
			sequence="4" />


        <record model="ir.ui.view" id="view_location_form_group_inherit">
            <field name="name">view.location.form</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='sale_partner_id']" position="after">
                        <field name="stock_location_group_id"/>
                    </xpath>
                </data>
            </field>
        </record>

		<record id="view_location_group_tree_inherit" model="ir.ui.view">
			<field name="name">stock.location.tree</field>
			<field name="model">stock.location</field>
			<field name="inherit_id" ref="stock.view_location_group_tree_inherit" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='branch_id']" position="after">
					<field name="stock_location_group_id" />
				</xpath>
			</field>
		</record>
    </data>
</openerp>