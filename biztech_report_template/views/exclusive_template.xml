<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <template id="exclusive_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
    
        <t t-call="biztech_report_template.exclusive_header"/>
        <t t-raw="0" />
        <t t-call="report.external_layout_footer"/>
    </template>
    <template id="exclusive_header">
        <div class="header">
            <table border="0" cellspacing="0" cellpadding="0" width="100%">
            <tbody>
                <tr>
                    <td>
                        <center>
                        <table width="700" border="0" cellspacing="0" cellpadding="0" style="padding:0px 20px 20px 20px; margin:0; font-family: Arial,Helvetica, sans-serif; background:#fff; line-height:20px;">
                            <tr>
                                <td colspan="3" style="height:15px;">
                                </td>
                            </tr>
                            <tr>    
                                <td valign="top"  align="left" t-attf-style="color:#{o.company_id and o.company_id.text_color or '#ffffff'}; font-size:12px; padding:0 0px;" colspan="2">
                                    <table width="700" border="0" cellspacing="0" cellpadding="0" >
                                        <tr>
                                            <td valign="middle" align="left" style="color:#4D4D4F; font-size:12px;padding: 15px; border-right: 1px solid #D4D1D1;">
                                                <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.invoice_logo or o.company_id.logo" style="max-height: 45px;"/>
                                                <br/>
                                            </td>
                                            <td valign="top" style="padding:15px;"><p t-attf-style="text-transform:capitalize; color: #{o.company_id and o.company_id.theme_color or '#ffffff'}; font-size:14px; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                <t t-if="o.company_id and o.company_id.is_company_bold">
                                                <h2 style="text-transform:capitalize; font-size :13px; padding:0px; margin:0;"><b><span t-attf-style="color: #{o.company_id and o.company_id.company_color or '#ffffff'};" t-field="o.company_id.partner_id"/></b></h2>
                                                </t>
                                                <t t-if="not o.company_id.is_company_bold">
                                                <h2 style="text-transform:capitalize; font-size :13px; padding:0px; margin:0;"><span t-attf-style="color: #{o.company_id and o.company_id.company_color or '#ffffff'};" t-field="o.company_id.partner_id"/></h2>
                                                </t>
                                                <div t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#ffffff'};">
                                                    <span t-esc="o._get_street(o.company_id.partner_id)"/><br/>
                                                    <span t-esc="o._get_address_details(o.company_id.partner_id)"/>
                                                </div>
                                                <t t-if="o.company_id.partner_id.mobile"><strong t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#ffffff'};">Mobile: </strong><span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#ffffff'};" t-field="o.company_id.partner_id.mobile"/><br/></t>
                                                <t t-if="o.company_id.partner_id.email"><strong t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#ffffff'};">Email: </strong><span t-attf-style="color: #{o.company_id and o.company_id.company_address_color or '#ffffff'};" t-field="o.company_id.partner_id.email"/></t>
                                            </td>
                                            <td valign="top" align="left" style="padding:15px 0px 15px 15px; width:50%; line-height:18px;"><p t-attf-style="text-transform:capitalize; color: #{o.company_id and o.company_id.theme_color or '#ffffff'}; font-size:14px; font-weight:bold;margin:0; margin-bottom:5px;">Invoice to:</p>
                                                <t t-if="o.company_id and o.company_id.is_customer_bold">
                                                <h1 style="text-transform:capitalize; font-size :13px; padding:0px; margin:0;"><b><span t-attf-style="color: #{o.company_id and o.company_id.customer_color or '#ffffff'};" t-field="o.partner_id"/></b></h1>
                                                </t>
                                                <t t-if="not o.company_id.is_customer_bold">
                                                <h1 style="text-transform:capitalize; font-size :13px; padding:0px; margin:0;"><span t-attf-style="color: #{o.company_id and o.company_id.customer_color or '#ffffff'};" t-field="o.partner_id"/></h1>
                                                </t>
                                                <p style="font-size :13px; margin:0; padding-top:0;">
                                                <div t-attf-style="color: #{o.company_id and o.company_id.customer_address_color or '#ffffff'};">
                                                    <span t-esc="o._get_street(o.partner_id)"/><br/>
                                                    <span t-esc="o._get_address_details(o.partner_id)"/>
                                                </div>
                                                <t t-if="o.partner_id.mobile"><b t-attf-style="color: #{o.company_id and o.company_id.customer_address_color or '#ffffff'};">Mobile:</b> <span t-attf-style="color: #{o.company_id and o.company_id.customer_address_color or '#ffffff'};" t-field="o.partner_id.mobile"/><br/></t>
                                                <t t-if="o.partner_id.email"><b t-attf-style="color: #{o.company_id and o.company_id.customer_address_color or '#ffffff'};">Email:</b><span t-attf-style="color: #{o.company_id and o.company_id.customer_address_color or '#ffffff'};" t-field="o.partner_id.email"/></t></p>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="height:15px;">
                                </td>
                            </tr>
                        </table>
                        </center>
                    </td>
                </tr>
            </tbody>
        </table>
        </div>
    </template>
    <template id="template_footer">
        <div class="footer">
            <div class="col-md-12 text-center" t-attf-style="color: #{'#ffffff'};">
                <span t-field="company.website"/>
            </div>
        </div>      
    </template>
    
    <template id="report_invoice_exclusive_main_header" inherit_id="biztech_report_template.exclusive_header" primary="True">
        <xpath expr="//center/table/tr" position="before">
            <tr>
                <td colspan="3" style="background-color:#E5E4E4; color:black ; text-align:center; font-weight:bold; padding:10px 0px; text-transform:uppercase;" >Duplicate</td>
            </tr>
        </xpath>
    </template>
    
    <template id="exclusive_external_layout_duplicate">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
    
        <t t-call="biztech_report_template.report_invoice_exclusive_main_header" />
        <t t-raw="0" />
        <t t-call="report.external_layout_footer" />
    </template>
    
