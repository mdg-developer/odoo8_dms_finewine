<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="view_product_template_uom_form" model="ir.ui.view">
			<field name="name">product.template.form</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<field name="weight_net" position="after">
					<field name="ctn_weight" />
					<field name="ctn_height" />
					<field name="cbm_value" string="CBM (cm)"/>
					<field name="kg_value" on_change='on_change_kg_value(kg_value)' string="Weight (Kg)"/>
					<field name="viss_value" string="Weight (Viss)" readonly="True"/>
					<field name="ctn_pallet" />
					<field name="inbound_shelf_life" string="Inbound Shelf Life (Days)"/>
					<field name="inbound_shelf_life_min" string="Inbound Shelf Life (Minimum)"/>
				</field>
				<field name="volume" position="replace">
					<field digits="(14, 3)" name="volume" invisible="1"/>					
				</field>
				<field name="weight" position="replace">
					<field name="weight" invisible="1"/>					
				</field>
				<field name="weight_net" position="replace">
					<field name="weight_net" invisible="1"/>					
				</field>
			</field>
		</record>
	</data>
</openerp>
		