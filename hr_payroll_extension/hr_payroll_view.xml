<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record model="ir.ui.view" id="view_hr_payslip_customize_form">
			<field name="name">hr.payslip.view.form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
			<field name="arch" type="xml">
				<xpath expr="//tree/field[@name='number_of_hours']" position="after">
					<field name="total_month_day" invisible="1"/>
					<field name="working_month" invisible="1"/>					
					
				</xpath>

			</field>
		</record>        
        <record id="view_salary_rule_form" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='quantity']" position="replace">
                        <field name="quantity" attrs="{'required':[('amount_select','!=','code')]}"/><newline/>
                    </xpath>
                </data>
            </field>
        </record>
    
    </data>
</openerp>
