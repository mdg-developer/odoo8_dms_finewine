<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_bom_product_button_on_product_template">
            <field name="name">product.template.procurement</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="groups_id"/>
            <field name="arch" type="xml">
                <div name="buttons" position="inside">
                    <button class="oe_inline oe_stat_button" name="%(open_bom_product)d" type="action" 
                        attrs="{'invisible':[('type', '=', 'service')]}" icon="fa-flask">
                        <field string="Bill of Materials" name="bom_product_count" widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>
        
        

        <record model="ir.ui.view" id="view_bom_product_product_button">
            <field name="name">product.product.procurement</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="groups_id"/>
            <field name="arch" type="xml">
                <div name="buttons" position="inside">
                    <button class="oe_inline oe_stat_button" name="action_view_bom" type="object" 
                        attrs="{'invisible':[('type', '=', 'service')]}" icon="fa-flask">
                        <field string="Bill of Materials" name="bom_product_count" widget="statinfo" />
                    </button>
                  
                </div>
            </field>
        </record>

</data></openerp>
