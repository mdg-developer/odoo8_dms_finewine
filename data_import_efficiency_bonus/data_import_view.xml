<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	    
		
		<record id="view_employee_efficiency_bonus_form" model="ir.ui.view">
			<field name="name">Efficiency Bonus Import Form</field>
			<field name="model">data_import.efficiency_bonus</field>
			<field name="arch" type="xml">
				<form string="Employee" version="7.0">
					<header>
						<button name="import_data" string="Import Efficiency Bonus Data" type="object"
							class="oe_highlight" />
						<field name="state" widget="statusbar" statusbar_visible="draft,completed,error" />
					</header>
					<sheet>
						<group>
							<field name="name" />
							<field name="import_date" />
							<field name="import_file" filename="import_fname" />
							<field name="import_fname" invisible="1" class="oe_inline oe_right" />
							<field name="company_id" />
							<field name="note" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_employee_efficiency_bonus_tree" model="ir.ui.view">
			<field name="name">Efficiency Bonus Import  Tree</field>
			<field name="model">data_import.efficiency_bonus</field>
			<field name="arch" type="xml">
				<tree string="Data Import Employee">
					<field name="import_date" />
					<field name="name" />
					<field name="import_fname" />
					<field name="note" />
					<field name="company_id" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Action -->
		<record id="action_employee_efficiency_bonus_import" model="ir.actions.act_window">
			<field name="name">Efficiency Bonus Value</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">data_import.efficiency_bonus</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_employee_efficiency_bonus_tree" />
		</record>

		<!-- First level menu -->
		<menuitem id="menu_employee_efficiency_bonus_import" 
			action="action_employee_efficiency_bonus_import" parent="hr.menu_hr_configuration" sequence="1" />

	</data>
</openerp>