<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_hr_business_units_form" model="ir.ui.view">
			<field name="name">HR Business Units Form</field>
			<field name="model">hr.business.units</field>
			<field name="arch" type="xml">
				<form string="HR Business Units Form" version="7.0">
					<sheet>
						<notebook>
							<page>
								<group>
									<group>
										<field name="name" />
										<field name="manager_id" />
									</group>

									<group>

										<field name="company_id" widget="selection"
											groups="base.group_multi_company" />
										<field name="parent_id" />
									</group>

								</group>

							</page>
						</notebook>

					</sheet>
				</form>
			</field>
		</record>


		<record id="view_hr_business_units_tree" model="ir.ui.view">
			<field name="name">HR Business Units Tree</field>
			<field name="model">hr.business.units</field>
			<field name="arch" type="xml">
				<tree string="Mobile Customer Payment Tree">
					<field name="name" />
					<field name="manager_id" />
					<field name="company_id" widget="selection" groups="base.group_multi_company" />
					<field name="parent_id" />

				</tree>
			</field>
		</record>

		<!-- Action -->
		<record id="action_hr_business_units" model="ir.actions.act_window">
			<field name="name">HR Business Units</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.business.units</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_hr_business_units_tree" />
		</record>

		<menuitem action="action_hr_business_units" id="hr_business_units_id"
			parent="hr.menu_hr_configuration" sequence="2" />
	</data>
</openerp>