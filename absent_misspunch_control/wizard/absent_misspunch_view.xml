<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_is_not_absent" model="ir.ui.view">
            <field name="name">Is Not Absent</field>
            <field name="model">absent.misspunch.control</field>
            <field name="arch" type="xml">
                <form string="Is Not Absent">
                    <separator colspan="4" string="Do you really want to make absent false?" />
                    <footer>
                        <button name="control_absent_misspunch" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_is_not_absent" model="ir.actions.act_window">
            <field name="name">Is Not Absent</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">absent.misspunch.control</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_is_not_absent"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>


        <record model="ir.values" id="is_not_absent">
<!--             <field name="model_id" ref="ot_approval_v2.model_attendance_data_import" /> -->
            <field name="name">Make Absent False</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_is_not_absent'))" />
            <field name="key">action</field>
            <field name="model">attendance.data.import</field>
        </record>

    </data>
</openerp>
