<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="inherit_product_template_form_view_ecommerce" model="ir.ui.view">
					<field name="name">product.template.product.tree</field>
					<field name="model">product.template</field>
					<field name="inherit_id" ref="product.product_template_form_view" />
					<field name="arch" type="xml">						
						<field name="active" position="after">							
							<field name="is_sync_ecommerce"/>
						</field>
						<xpath expr="//h1" position="after">
						    <label class="oe_edit_only" for="short_name" string="Product Short Name"/>
                            <h1><field name="short_name" class="oe_inline"/></h1>
							<label class="oe_edit_only" for="myanmar_name" string="Product Myanmar Name"/>
							<h1><field name="myanmar_name" class="oe_inline"/></h1>
						</xpath>
					</field>
		</record>
		
		<record id="product_template_form_view_inherit_city" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit.city</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product_product.product_template_form_view_inherit" />
			<field name="arch" type="xml">				
				<xpath expr="//page[@name='uoms']" position="after">
					<page name="city" string="City">
						<field name="city_lines"/>
					</page>
					<page name="ecommerce" string="Ecommerce">
					    <group>					        
						    <group>
						        <field name="ecommerce_uom_id"/>
  								<field name="tag_ids" widget="many2many_tags"/>
								<field name="brand_id"/>
								<field name="ecommerce_supplier_id"/>
								<field name="ecommerce_department_id"/>
						    </group>
						    <group>	
						        <field name="delivery_id"/>
						        
						        <!-- <field name="ecommerce_price"/> -->
						    </group>
					    </group>					    						
					</page>
				</xpath>
			</field>
		</record>
		
		<record id="product_template_form_view_inherit_ecommerce" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit</field>
			<field name="model">product.template</field>
			<field name="type">form</field>			
			<field name="inherit_id" ref="product_product.product_template_form_view_inherit"/>	
			<field name="arch" type="xml">		
					<xpath expr="//field[@name='uom_price_lines']/tree/field[@name='per_pallet']" position="after">
						<field name="for_ecommerce"/>
					</xpath>
					<xpath expr="//field[@name='company_id']" position="after">
						<label for="description" string="Product Description"/>
					</xpath>
					<xpath expr="//page[@string='UOM Info']" position="replace">
					</xpath>
					<xpath expr="//page[@string='Information']" position="after">
						<page name="uoms_price" string="UOM Info">
							<field name="uom_price_lines">
								<form string="UOM Price Lines">
									<group>
										<field name="name" on_change="onchange_product_uom(name)" />
										<field name="category_id" />
										<field name="factor" />
										<field name="price" />
										<field name="uom_ratio" />
										<field name="weight" />
										<field name="length" />
										<field name="width" />
										<field name="height" />
										<field name="per_pallet" />
									</group>
								</form>
								<tree string="UOM Price Lines" editable="bottom">
									<field name="name" on_change="onchange_product_uom(name)" />
									<field name="category_id" />
									<field name="factor" />
									<field name="price" />
									<field name="uom_ratio" />
									<field name="weight" />
									<field name="length" />
									<field name="width" />
									<field name="height" />
									<field name="per_pallet" />
								</tree>
							</field>
						</page>
					</xpath>
					<xpath expr="//page[@string='Accounting']/group/label[@string='Sub Group']" position="replace">
						<label for="group" string="Product Sub Category" />
					</xpath>
					<xpath expr="//page[@string='Inventory']/group[@name='inventory']/group[@name='weight']" position="attributes">
						<attribute name="string">Carton, Weights and Dimensions</attribute>
					</xpath>
			</field>
		</record>
	</data>
</openerp>