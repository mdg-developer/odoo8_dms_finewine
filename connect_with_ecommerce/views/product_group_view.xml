<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
<!--shl-->
		<!-- Product Group Tree -->
		<record id="view_product_category_form_inherit" model="ir.ui.view">
			<field name="name">product.category.form.view.inherit</field>
			<field name="model">product.category</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="product.product_category_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='parent_id']" position="after">
					<field name="principal_id" readon="1"/>
					<field name="code" readonly="1"/>
				</xpath>
				<xpath expr="//form/sheet" position="before">
					<field name="is_code_generated" invisible="1"/>
					<button name="action_generate_category_code" attrs="{'invisible':[('is_code_generated','=',True)]}" string="Generate Code" type="object" class="oe_highlight"/>
				</xpath>
			</field>
		</record>

		<record id="view_product_principal_form_inherit" model="ir.ui.view">
			<field name="name">product.maingroup.form.view.inherit</field>
			<field name="model">product.maingroup</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="product_product.view_product_maingroup_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<field name="code"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>