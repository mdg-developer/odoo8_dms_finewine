<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<record id="view_partner_form_ecommerce" model="ir.ui.view">
				<field name="name">res.partner.form.ecommerce</field>
				<field name="model">res.partner</field>
				<field name="type">form</field>
				<field name="inherit_id" ref="base.view_partner_form"/>
	            <field name="arch" type="xml">	
	            	 <xpath expr="//page[@name='sales_purchases']" position="after">
						<page name="ecommerce" string="E-commerce">
							<group>
	                            <group>
		                            <label for="type" attrs="{'invisible': [('parent_id','=', False)]}"/>
		                            <div attrs="{'invisible': [('parent_id','=', False)]}" name="div_type">
		                                <field class="oe_inline"
		                                    name="type"/>
		                            </div>	
		                            <label for="ecom_street" string="Address"/>
		                            <div>
		                            	<field name="ecom_country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('use_parent_address','=',True)]}"/>	
		                            	<field name="ecom_state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}'  attrs="{'readonly': [('use_parent_address','=',True)]}"/>    
		                            	<field name="ecom_city_id" placeholder="City" style="width: 40%%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>                                                      
		                                <field name="ecom_township_id" class="o_address_state" placeholder="Township" domain="[('city', '=', city)]" style="width: 66%%" required="1"/>
		                                <field name="ecom_street" placeholder="Street..."  attrs="{'readonly': [('use_parent_address','=',True)]}"/>
		                                <field name="ecom_street2"  attrs="{'readonly': [('use_parent_address','=',True)]}"/>
		                            </div>
	                            </group>				
								<group>
									<field name="ecom_phone"/>		
								</group>						
							</group>
						</page>
					</xpath>						
				</field>
		</record>       
	</data>
</openerp>