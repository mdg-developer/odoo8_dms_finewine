<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_woo_departments_form_view_ept" model="ir.ui.view">
            <field name="name">WooCommerce departments</field>
            <field name="model">woo.departments.ept</field>
            <field name="arch" type="xml">
                <form string="WooCommerce Departments">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="woo_instance_id" domain="[('state','=','confirmed')]"/>
                            </group>
                            <group>
                                <field name="slug"/>
                                <field name="exported_in_woo" readonly="1"/>
                                <field name="woo_department_id" readonly="1"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_woo_departments_tree_view_ept" model="ir.ui.view">
            <field name="name">Woo Departments</field>
            <field name="model">woo.departments.ept</field>
            <field name="arch" type="xml">
                <tree string="Product Product Categories">
                    <field name="name"/>
                    <field name="slug"/>
                    <field name="woo_instance_id"/>
                    <field name="exported_in_woo"/>
                    <field name="woo_department_id"/>
                </tree>
            </field>
        </record>
        <record id="product_woo_departments_search_view_ept" model="ir.ui.view">
            <field name="name">Woo Departments Search View</field>
            <field name="model">woo.departments.ept</field>
			<field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Woo Departments">
					<field name="name"/>
					<field name="woo_department_id"/>
					<filter string="Exported In Woo" icon="terp-accessories-archiver" domain="[('exported_in_woo','=','True')]"/>
                	<filter string="Not Exported In Woo" icon="terp-accessories-archiver" domain="[('exported_in_woo','=','False')]"/>
					<group expand="0" string="Group By...">
						 <filter string="Instance" icon="terp-personal"  context="{'group_by':'woo_instance_id'}"/>
					</group>
				</search>
			</field>
	    </record>
        <record id="product_departments_action_ept" model="ir.actions.act_window">
            <field name="name">Product Departments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">woo.departments.ept</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="product_departments_action_ept" id="product_departments_menu_ept" parent="woo_commerce_ept.menu_item_parent_woo_products_ept" sequence="13" />
    </data>
</openerp>