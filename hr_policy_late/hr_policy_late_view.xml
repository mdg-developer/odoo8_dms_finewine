<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Policy Lines -->

		<record id="late_policy_line_tree_view" model="ir.ui.view">
			<field name="name">hr.policy.line.late.tree</field>
			<field name="model">hr.policy.line.late</field>
			<field name="arch" type="xml">
				<tree string="Late Lines">
					<field name="name" />
					<field name="code" />
					<field name="type" />
					<field name="rate" />
					<field name="active_after" />
					<field name="active_start_time" />
					<field name="active_end_time" />
				</tree>
			</field>
		</record>

		<record id="late_policy_line_form_view" model="ir.ui.view">
			<field name="name">hr.policy.line.late.form</field>
			<field name="model">hr.policy.line.late</field>
			<field name="arch" type="xml">
				<form string="Late Policy" version="7.0">
					<sheet>
						<h1>
							<label for="name" string="Name" class="oe_edit_only" />
							<field name="name" />
						</h1>
						<h1>
							<label for="code" string="Code" class="oe_edit_only" />
							<field name="code" />
						</h1>
						<group>
							<group>
								<field name="type" />
								<field name="rate" />
							</group>
							<group>
								<field name="active_start_time" attrs="{'invisible': [('type','!=','daily')]}" />
								<field name="active_end_time" attrs="{'invisible': [('type','!=','daily')]}" />
								<field name="pay_day" attrs="{'invisible': [('type','!=','daily')]}" />
								<field name="tz"
									attrs="{'invisible': [('type','!=','daily')], 'required': ['&amp;', ('active_start_time', '!=',''), ('active_start_time', '!=', False)]}" />
								<field name="policy_id" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Late Policy -->
		<record id="late_policy_view_tree" model="ir.ui.view">
			<field name="name">hr.policy.late.tree</field>
			<field name="model">hr.policy.late</field>
			<field name="arch" type="xml">
				<tree string="Late Policies">
					<field name="name" />
					<field name="date" />
				</tree>
			</field>
		</record>

		<record id="late_policy_view_form" model="ir.ui.view">
			<field name="name">hr.policy.late.form</field>
			<field name="model">hr.policy.late</field>
			<field name="arch" type="xml">
				<form string="Late Policy" version="7.0">
					<sheet>
						<h1>
							<label for="name" string="Name" class="oe_edit_only" />
							<field name="name" />
						</h1>
						<group>
							<group>
								<field name="date" />
							</group>
							<group></group>
						</group>
						<group string="Late Lines">
							<field name="line_ids" nolabel="1" editable="top" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="open_late_policy" model="ir.actions.act_window">
			<field name="name">Late Policies</field>
			<field name="res_model">hr.policy.late</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem action="open_late_policy" id="menu_hr_late_policy"
			parent="hr_policy_group.menu_hr_policy_configuration" sequence="10" />

		<!-- Policy Group -->

		<record id="policy_group_view_form" model="ir.ui.view">
			<field name="name">hr.policy.group.form.lateinherit</field>
			<field name="model">hr.policy.group</field>
			<field name="inherit_id" ref="hr_policy_group.policy_group_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='left']" position="inside">
					<field name="late_policy_ids" />
				</xpath>
			</field>
		</record>

	</data>
</openerp>
