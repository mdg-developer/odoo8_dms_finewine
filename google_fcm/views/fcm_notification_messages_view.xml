<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="fcm_notification_messages_tree_view" model="ir.ui.view">
            <field name="name">Messages</field>
            <field name="model">fcm.notification.messages</field>
            <field name="arch" type="xml">
                <tree string="Firebase Messages">
                    <field name="partner_id"/>
                    <field name="fcm_message_id"/>
                    <field name="message_title"/>
                    <field name="message_body"/>
                    <field name="create_date" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="fcm_notification_messages_form_view" model="ir.ui.view">
            <field name="name">Messages</field>
            <field name="model">fcm.notification.messages</field>
            <field name="arch" type="xml">
                <form string="Messages">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="fcm_message_id" readonly="1"/>
                            <field name="topic_name" readonly="1"/>
                            <field name="message_title" readonly="1"/>
                            <field name="message_body" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_fcm_notification_messages" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fcm.notification.messages</field>
            <field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="view_id" eval="fcm_notification_messages_tree_view"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to create new message.
				</p>
			</field>
        </record>

    </data>
</openerp>