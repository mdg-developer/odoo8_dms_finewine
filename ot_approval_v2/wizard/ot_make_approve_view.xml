<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_ot_make_approve" model="ir.ui.view">
            <field name="name">Approve OT</field>
            <field name="model">ot.make.approve</field>
            <field name="arch" type="xml">
                <form string="Approve OT">
                    <separator colspan="4" string="Do you really want to approve the OT(s)?" />
                    <footer>
                        <button name="approve_ot" string="Approve OTs" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_ot_make_approve" model="ir.actions.act_window">
            <field name="name">Approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ot.make.approve</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ot_make_approve"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>


        <record model="ir.values" id="ot_make_approve">
<!--             <field name="model_id" ref="ot_approval_v2.model_attendance_data_import" /> -->
            <field name="name">Make Approval</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_ot_make_approve'))" />
            <field name="key">action</field>
            <field name="model">attendance.data.import</field>
        </record>

    </data>
</openerp>
