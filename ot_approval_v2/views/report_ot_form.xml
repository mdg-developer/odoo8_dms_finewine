			</xpath>
		</template>	
		<template id="report_ot_form_temp">
    		<t t-call="report.html_container">
        		<t t-foreach="doc_ids" t-as="doc_id">
        			<t t-raw="translate_doc(doc_id, doc_model, 'employee_id.name', 'ot_approval_v2.report_ot_inherit')"/>
       			</t>
    		</t>
    	</template>
	</data>
</openerp>
