<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_ot_inherit" >
			<xpath expr="//t[@t-call='report.external_layout']" position="replace">
				<t t-call="ot_approval_v2.ot_custom_layout1">
