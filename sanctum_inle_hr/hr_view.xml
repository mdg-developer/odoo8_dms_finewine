<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

	<record model="ir.ui.view" id="hr_employee_view_form">
			<field name="name">hr.employee.info.inherit</field>
			<field name="model">hr.employee</field>
			<field name="priority" eval="20" />
			<field name="inherit_id" ref="hr_family.hr_employee_view_form" />

			<field name="arch" type="xml">

				<field name="fam_father" position="after">
					<field name="is_fam_father" />
				</field>
				<field name="fam_mother" position="after">
					<field name="is_fam_mother" />
				</field>
				<field name="fam_mother_dob" position="after">
					<field name="f_name" />
					<field name="is_father_inlaw" />
					<field name="m_name" />
					<field name="is_mother_inlaw" />
					
				</field>

			</field>
		</record>

		<!-- hr_contract -->
		<record id="hr_contract_view_form" model="ir.ui.view">
			<field name="name">hr.contract.view.form</field>
			<field name="model">hr.contract</field>
			<field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
			<field name="arch" type="xml">
				<data>
					<xpath
						expr="//form/sheet/notebook/page[@string='Information']/group/group/field[@name='wage']"
						position="after">
						<field name="tax_wage" />
					</xpath>
				</data>
			</field>		
		
		</record>
		
		<!--employee birthday month-->
	    <record id="hr_employee_birthday_month_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit.education</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>                   
                    <xpath expr="//field[@name='birthday']" position="after">
                    	<field name="month" invisible="1"/>
                    </xpath>
                </data>
            </field>
        </record>

		<!-- search with month for employee dob in advanced search -->
		<record id="hr_employee_birthday_month_form_view" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit.education</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <data>                   
                    <xpath expr="//field[@name='department_id']" position="after">
                    	 <field name="month"  string="Birthday Month" />
                    </xpath>
                </data>
            </field>
        </record>

