<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>


		<record id="view_employee_report_form" model="ir.ui.view">
			<field name="name">Report Form</field>
			<field name="model">employee.report</field>
			<field name="arch" type="xml">
				<form string="Employee Report" version="7.0">
					<group col="1">
						<b>Employee Report</b>
						<br />

						<a href="http://localhost:8080/birt/frameset?__report=work_history_report.rptdesign"
							target="_blank">Work History Report</a>
						<br />
				 		<a href="http://localhost:8080/birt/frameset?__report=employee_list_by_job.rptdesign"
							target="_blank">All Employee List By Job ID</a>
						<br />
						<a href="http://localhost:8080/birt/frameset?__report=employee_list_by_dep.rptdesign"
						       target="_blank">Employee List By Department</a>
						 <br />			
						<a href="http://localhost:8080/birt/frameset?__report=emp_count_with_job_by_dep.rptdesign"
						       target="_blank">Employee count with job id by department</a>
						 <br />								 		
					</group>


					<footer>
						<button string="Close" class="oe_highlight" special="cancel" />
					</footer>
				</form>
			</field>
		</record>


		<record id="action_employee_report" model="ir.actions.act_window">
			<field name="name">Print Report</field>
			<field name="res_model">employee.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_employee_report_form" />
			<field name="target">new</field>
		</record>


		<menuitem action="action_employee_report" id="menu_employee_report"
			name="Employee Data Reports" parent="hr.menu_hr_reporting" sequence="10" />
	</data>
</openerp>

			
	    
			 	
