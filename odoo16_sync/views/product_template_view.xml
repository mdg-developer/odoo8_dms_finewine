<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="inherit_product_template_form_view_sd" model="ir.ui.view">
					<field name="name">product.template.product.tree</field>
					<field name="model">product.template</field>
					<field name="inherit_id" ref="product.product_template_form_view" />
					<field name="arch" type="xml">
						
						<field name="active" position="after">
							
							<field name="is_sync_cellar"/>
						</field>
						<field name="product_variant_count" position="after">
							<button name="sync_to_cellar" string="Sync To Cellar18" class="oe_highlight"
								type="object" groups="base.group_no_one" />
		
						</field>
						
					</field>
		</record>
		
		<record id="product.product_template_tree_view" model="ir.ui.view">
            <field name="name">product.template.product.tree</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Product">
                    <field name="name" fg_color="blue:is_sync_cellar==True;"/>
                    <field name="categ_id" fg_color="blue:is_sync_cellar==True;"/>
                    <field name="type" fg_color="blue:is_sync_cellar==True;"/>
                    <field name="state" fg_color="blue:is_sync_cellar==True;"/>
                    <field name="uom_id" invisible="1"/>
                    <field name="is_sync_cellar" fg_color="blue:is_sync_cellar==True;"/>
                </tree>
            </field>
        </record>
        
		<record id="mdg_customization.inherit_product_template_tree_view" model="ir.ui.view">
			<field name="name">product.template.product.tree</field>
			<field name="model">product.template</field>
			
			<field name="arch" type="xml">
				<field name="categ_id" position="replace">
					<field name="categ_id" string="Category" fg_color="blue:is_sync_cellar==True;"/>
				</field>

				<field name="categ_id" position="after">
					<field name="uom_id" string="S.UOM" fg_color="blue:is_sync_cellar==True;"/>
					<field name="list_price" string="S.Price" fg_color="blue:is_sync_cellar==True;"/>
                    <field name="big_uom_id" string="B.UOM"   invisible="1"/>
                    <field name="big_list_price" string="B.Price"   invisible="1"/>
					<field name="uom_ratio" fg_color="blue:is_sync_cellar==True;"/>
					<field name="sequence" fg_color="blue:is_sync_cellar==True;"/>

				</field>
				<field name="type" position="replace">
					<field name="type" invisible="1" />
				</field>
				<field name="state" position="replace">
					<field name="state" invisible="1" />
				</field>
			</field>
		</record>
	</data>
</openerp>