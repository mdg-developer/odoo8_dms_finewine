<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_odoo16_form" model="ir.ui.view">
			<field name="name">Odoo16 Connection Form</field>
			<field name="model">odoo16.connection</field>
			<field name="arch" type="xml">
				<form string="Odoo16 Connection Form" version="7.0">
					<header>
						<button name="test_connection" string="Test Connection" type="object"
							class="oe_highlight" />						
					</header>
					<sheet>
						<group>
							<field name="url" />
							<field name="username" />
							<field name="password" password="True"/>
							<field name="dbname" />
							
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_odoo16_tree" model="ir.ui.view">
			<field name="name">Odoo16 Connection Tree</field>
			<field name="model">odoo16.connection</field>
			<field name="arch" type="xml">
				<tree string="Odoo16 Connection">
					<field name="url" />
					<field name="username" />
					<field name="password" password="True"/>
					<field name="dbname" />
				</tree>
			</field>
		</record>

		<!-- Action -->
		<record id="action_odoo16" model="ir.actions.act_window">
			<field name="name">Odoo16 Connection</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">odoo16.connection</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_odoo16_tree" />
		</record>

		<menuitem id="menu_odoo16_connection_config" name="SD Connection"
			parent="base.menu_custom" sequence="32" />
		<menuitem action="odoo16_sync.action_odoo16" id="menu_odoo16_connection"
			parent="menu_odoo16_connection_config" sequence="11" />



		
	</data>
</openerp>
