<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_delivery_order_multi_sync_form" model="ir.ui.view">
            <field name="name">delivery_order_multi_sync_form</field>
            <field name="model">delivery.order.multi.sync</field>
            <field name="arch"  type="xml">
                <form string="Show Customer Map">
                    <group col="4" colspan="6">
                       <span class="o_form_label">All selected picking list sync to Odoo15</span>
                    </group>
                    <footer>
                        <button name="delivery_order_sync" string="Sync to Odoo" type="object" class="oe_highlight" groups="base.group_no_one"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_delivery_order_multi_sync" model="ir.actions.act_window">
            <field name="name">Delivery Order Multi Sync to Odoo15</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">delivery.order.multi.sync</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>

        </record>



        <record model="ir.values" id="delivery_order_multi_sync_value">
            <field name="name">Delivery Order Multi Sync to Odoo</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_delivery_order_multi_sync'))" />
            <field name="key">action</field>
            <field name="model">stock.picking</field>
        </record>



    </data>
</openerp>
