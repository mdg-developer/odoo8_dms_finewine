<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<!-- customize form for sale order line view -->
		<record id="view_account_invoice_inherit_form" model="ir.ui.view">
			<field name="name">account.invoice</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="arch" type="xml">
				<!-- <field name="internal_number" position="after"> <field name="sale_order_id" 
					invisible="1" /> </field> -->
				<xpath expr="//label[@string='Draft Invoice']" position="replace">
				</xpath>
				<xpath expr="//button[@string='Validate']" position="replace">
					<button name="invoice_open" states="draft" string="Validate"
						class="oe_highlight" groups="base.group_user,base.group_sale_manager" />
					<button name="invoice_open" states="proforma2" string="Validate"
						groups="base.group_user,base.group_sale_manager" />
				</xpath>
				<xpath expr="/form/sheet/notebook/page[@string='Invoice Lines']"
					position="after">
					<page name='promo_lines' string="Promotion Lines">
						<field name="promos_line_ids" readonly="1">
							<form string="Promotion Lines" version="7.0">
								<group>
									<group>
										<field name="pro_id" on_change="onchange_promo_id(pro_id)" />
										<field name="from_date" />
										<field name="to_date" />
										<field name="manual" />
									</group>
								</group>
							</form>
							<tree string="Promotion Lines" editable="bottom" readonly="1">
								<field name="pro_id" on_change="onchange_promo_id(pro_id)" />
								<field name="from_date" />
								<field name="to_date" />
								<field name="manual" />
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>


	</data>
</openerp>
		