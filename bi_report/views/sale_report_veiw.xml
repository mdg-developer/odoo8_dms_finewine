<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
    <record id="view_order_product_graph_inherit" model="ir.ui.view">
         <field name="name">sale.report.graph</field>
         <field name="model">sale.report</field>
         <field name="inherit_id" ref="sale.view_order_product_graph"/>
         <field name="arch" type="xml">
         	<xpath expr="//graph[@string='Sales Analysis']/field[@name='price_total']" position="after">
         		 <field name="invoiced_target" type="measure"/>
                 <field name="yearly_target_amount" type="measure"/>
                 <field name="monthly_target_amount" type="measure"/>
                 <field name="weekly_target_amount" type="measure"/>
         	</xpath>
         </field>
     </record>     	
     <record id="view_order_product_search_inherit" model="ir.ui.view">
        <field name="name">sale.report.search</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="arch" type="xml">
        	  <xpath expr="//search[@string='Sales Analysis']/group[@string='Group By']/filter[@string='Order Month']" position="after">
        	  	<filter string="Order Year" context="{'group_by':'date:year'}"/>
        	  	<filter string="Weekly" context="{'group_by':'date:week'}"/>
        	  	<filter string="Daily" context="{'group_by':'date:day'}"/>
        	  	<filter string="Branch" context="{'group_by':'branch_id'}"/>
        	  	<filter string="Product" context="{'group_by':'product_id'}"/>
        	  	<filter string="Township" context="{'group_by':'township_id'}"/>
        	  	<filter string="City" context="{'group_by':'city'}"/>
        	  	<filter string="Region" context="{'group_by':'state_id'}"/>
        	  	<filter string="Demarcation" context="{'group_by':'demarcation_id'}"/>
        	  	<filter string="Group" context="{'group_by':'group_id'}"/>
        	  	<filter string="Main Group" context="{'group_by':'main_group_id'}"/>
        	  	<filter string="Product Division" context="{'group_by':'division_id'}"/>
        	  	<filter string="Customer" context="{'group_by':'partner_id'}"/>
        	  </xpath>      
        	  <xpath expr="//search[@string='Sales Analysis']/group[@string='Group By']/filter[@string='Customer']" position="replace">
        	  	<filter string="Customer" name="Customer" context="{'group_by':'partner_id'}"/>
        	  </xpath>     
        </field>
    </record>
    </data>
</openerp>
