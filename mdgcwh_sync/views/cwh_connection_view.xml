<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_cwh_form" model="ir.ui.view">
			<field name="name">CWH Connection Form</field>
			<field name="model">cwh.connection</field>
			<field name="arch" type="xml">
				<form string="CWH Connection Form" version="7.0">
					<header>
						<button name="test_connection" string="Test Connection" type="object"
							class="oe_highlight" />						
					</header>
					<sheet>
						<group>
							<field name="url" />
							<field name="username" />
							<field name="password" password="True"/>
							<field name="dbname" />
							
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_cwh_tree" model="ir.ui.view">
			<field name="name">CWH Connection Tree</field>
			<field name="model">cwh.connection</field>
			<field name="arch" type="xml">
				<tree string="CWH Connection">
					<field name="url" />
					<field name="username" />
					<field name="password" password="True"/>
					<field name="dbname" />
				</tree>
			</field>
		</record>

		<!-- Action -->
		<record id="action_cwh" model="ir.actions.act_window">
			<field name="name">CWH Connection</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">cwh.connection</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_cwh_tree" />
		</record>

		<menuitem id="menu_cwh_connection_config" name="CWH Connection"
			parent="base.menu_custom" sequence="32" />
		<menuitem action="mdgcwh_sync.action_cwh" id="menu_cwh_connection"
			parent="menu_cwh_connection_config" sequence="11" />



		
	</data>
</openerp>
