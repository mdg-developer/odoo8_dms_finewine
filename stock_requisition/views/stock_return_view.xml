<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<!-- ============================== Content Form ============================== -->

		<record id="stock_return_form" model="ir.ui.view">
			<field name="name">Stock Return Form</field>
			<field name="model">stock.return</field>
			<field name="arch" type="xml">
				<form string="Stock Return Form">
					<header>
						<button name="confirm" string="Confirm" class="oe_highlight"
							type="object" states="draft" />
						<button name="approve" string="Approve" class="oe_highlight"
							type="object" states="confirm" groups="stock.group_stock_manager" />
						<button name="cancel" string="Cancel" class="oe_highlight"
							type="object" states="confirm" groups="stock.group_stock_manager" />
						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="sale_team_id" attrs="{'readonly':[('state','=','approve')]}"
									on_change="on_change_sale_team_id(sale_team_id)" />
								<field name="return_from" attrs="{'readonly':[('state','=','approve')]}" />
								<field name="return_date" attrs="{'readonly':[('state','=','approve')]}" />
							</group>
							<group>
								<field name="note_id" attrs="{'readonly':[('state','=','approve')]}"
									domain="[('sale_team_id', '=',sale_team_id)]" />
								<field name="so_no" attrs="{'readonly':[('state','=','approve')]}" />
								<field name="vehicle_id" attrs="{'readonly':[('state','=','approve')]}" />
								<field name="company_id" attrs="{'readonly':[('state','=','approve')]}" />
							</group>
						</group>
						<group>
							<group>
								<button name="retrieve_data" string="Retrieve" type="object"
									widget="statinfo" class="oe_highlight" />

							</group>
							<group>

							</group>
						</group>
						<group>
							<notebook>
								<page string="Stock List">
									<field name="p_line" attrs="{'readonly':[('state','=','approve')]}">
										<tree string="Stock Return Line" editable="bottom">
											<field name="product_id" />
											<field name="receive_quantity" />
											<field name="return_quantity" />
											<field name="sale_quantity" />
											<field name="foc_quantity" />
											<field name="product_uom" />
											<field name="uom_ratio" invisible="1" />
											<!-- <field name="qty_by_wh" /> -->
											<field name="rec_big_quantity" />
											<field name="rec_big_uom_id" />
											<field name="rec_small_quantity" />
											<field name="rec_small_uom_id" />
											<field name="expiry_date" />
											<field name="remark" />
										</tree>
									</field>
								</page>
							</notebook>

						</group>

					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"
							groups="base.group_user" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		<!-- filter -->

		<record id="view_stock_return_filter" model="ir.ui.view">
			<field name="name">Stock Return Filter</field>
			<field name="model">stock.return</field>
			<field name="arch" type="xml">
				<search string="Search Stock Return">
					<group expand="0" string="Group By...">
						<filter string="Sale Team" icon="terp-partner" domain="[]"
							context="{'group_by':'sale_team_id'}" />
						<filter string="Return From" icon="terp-partner" domain="[]"
							context="{'group_by':'return_from'}" />
						<filter string="Date of Return" icon="terp-partner" domain="[]"
							context="{'group_by':'return_date'}" />

					</group>
				</search>
			</field>
		</record>
		<!-- ============================== Content Tree ============================== -->
		<record id="stock_return_tree" model="ir.ui.view">
			<field name="name">stock_return_tree</field>
			<field name="model">stock.return</field>
			<field name="arch" type="xml">
				<tree string="Contents">
					<field name="name" />
					<field name="note_id" />
					<field name="return_from" />
					<field name="so_no" />
					<field name="return_date" />
					<field name="vehicle_id" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- Stock Requisition -->
		<record id="action_stock_return" model="ir.actions.act_window">
			<field name="name">Stock Return</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">stock.return</field>
			<field name="context">{}</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="stock_return_tree" />
			<field name="search_view_id" ref="view_stock_return_filter" />
			<field name="domain">[]
			</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to Register Stock Return Note .
				</p>
			</field>
		</record>


		<menuitem action='action_stock_return' id="menu_action_stock_return"
			parent="stock.menu_stock_warehouse_mgmt" groups="stock.group_stock_manager" />

	</data>
</openerp>