<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_stock_request_document">
			<t t-call="stock_requisition.stock_req_layout">
        <div class="page">
            <div class="row">
                <div class="col-xs-5 col-xs-offset-7">
                    <address t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                    <span t-field="o.partner_id.vat"/>
                </div>
            </div>

            <h2>
                <p>Request For Issue</p>
            </h2>
            
            <table class="table table-condensed">
                  <tr >
                      <td>
                      	<strong>(RFI)Ref;No:</strong>
                      </td>
                      <td>
                          <strong t-field="o.name"></strong>
                      </td>
                      
                      <td>
                          <strong>Issue To:</strong>
                      </td>
                      <td>
					  	 <p t-field="o.issue_to"/>
					  </td>
                  </tr>
                  
                  <tr >
                      <td>
                      	<strong>Delivery Team:</strong>
                      </td>
                      <td>
                          <p t-field="o.sale_team_id.name"/>
                      </td>
                      
                      <td>
                          <strong>Vehicle No:</strong>
                      </td>
                      <td>
					  	 <span t-field="o.vehicle_id.model_id.brand_id.name"/>
						 <b>/</b>
						 <span t-field="o.vehicle_id.model_id.modelname"/>
					  </td>
					  
                  </tr>
                  
                  <tr >
                  	  
                  	  <td>
                      	<strong>Requesting Location:</strong>
                      </td>
                      <td>
                          <span t-field="o.from_location_id.location_id.name"/>
						  <b>/</b>
						  <span t-field="o.from_location_id.name"/>
                      </td>
                      <td>
                          <strong>Request Warehouse:</strong>
                      </td>
                      <td>
					  	 <span t-field="o.to_location_id.location_id.name"/>
						 <b>/</b>
						 <span t-field="o.to_location_id.name"/>
					  </td>
                      
                  </tr>
                  
                  <tr >
                      <td>
                      	<strong>Date Requested:</strong>
                      </td>
                      <td>
                          <p t-field="o.request_date"/>
                      </td>
                      
                      <td>
                          <strong>Requested By:</strong>
                      </td>
                      <td>
					  	 <p t-field="o.request_by"/>
					  </td>
                  </tr>
                  
                  <tr >
                      <td>
                      	<strong>Company:</strong>
                      </td>
                      <td>
                          <!-- <p t-field="o.company_id.name"/> -->
                          <img src="/sale_management/static/description/amh_comany.png"
													style="max-height: 100pt;width:150px;" />
                      </td>
                      <td>
                          <strong>Approved By:</strong>
                      </td>
                      <td>
					  	 <p t-field="o.approve_by"/>
					  </td>
                  </tr>
            </table>
            
            <table class="table table-condensed" >
                <thead>
                    <tr style="background-color:#0052cc;color:#ffffff;" height="10pt;">
                        <th>Product</th>
                        <th>Quantity(B/S)</th>
                     <!--   <th>Bigger UOM</th>
                        <th>Quantity</th> -->
                        <th>UOM(B/S)</th>
                         <th>Remark</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.p_line" t-as="l">
                        <td><span t-field="l.product_id"/></td>
                        <td>
                            <span t-field="l.big_req_quantity"/> /  <span t-field="l.req_quantity"/>
                        </td>
                        <td>
                            <span t-field="l.big_uom_id.name"/> /  <span t-field="l.product_uom.name"/>
                        </td>
                        <td><span t-field="l.remark"/></td>
                    </tr>
                </tbody>
            </table>
          <table class="table table-condensed">
                <thead>
                    <tr>
                        <th></th>
                        <th>Requested By</th>
                        <th>Approved By</th>
                    </tr>
                </thead>
               <tbody class="invoice_tbody">
				<tr height="50">
                    <td>Signature</td>
					<td></td>
					<td></td>
				</tr>
				<tr t-foreach="o" t-as="l">
                    <td>Name</td>
                    <td><p t-field="l.request_by"/></td>
                   	<td> <p t-field="l.approve_by"/></td><br/>
				</tr>
				<tr>
                    <td>Position</td>
					<td></td>
					<td></td>
				</tr>
				<tr>
                    <td>Date</td>
					<td></td>
					<td></td>
				</tr>
                </tbody>
			</table>
			<br/>
			<!-- <strong>FO-ST-10 REV-00</strong> -->
        </div>
   		</t>
		</template>

		<template id="stock_request">
			<t t-call="report.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t
						t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'stock_requisition.report_stock_request_document')" />
				</t>
			</t>
		</template>
	</data>
</openerp>
