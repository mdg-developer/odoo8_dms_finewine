<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="stock_return_note_document">
			<t t-call="report.external_layout">
				<div class="page">
					<!-- <div class="row"> <div class="col-xs-5 col-xs-offset-7"> <address 
						t-field="o.partner_id" t-field-options='{"widget": "contact", "fields": ["address", 
						"name"], "no_marker": true}' /> <span t-field="o.partner_id.vat"/> </div> 
						</div> -->

					<h2>
						<p>Stock Return Note</p>
					</h2>

					<table class="table table-condensed">
						<tr>
							<td style="border:0pt;font-size:10pt;">
								<strong>SRN Ref:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<strong t-field="o.name"></strong>
							</td>

							<td style="border:0pt;font-size:10pt;">
								<strong>Returned By:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.returner"></span>
							</td>
						</tr>

						<tr>
							<td style="border:0pt;font-size:10pt;">
								<strong>Sales Team:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.sale_team_id.name" />
							</td>

							<td style="border:0pt;font-size:10pt;">
								<strong>WH Receiver:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.wh_receiver" />
							</td>
						</tr>

						<tr>
							<td style="border:0pt;font-size:10pt;">
								<strong>From Location:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.from_location" />
							</td>

							<td style="border:0pt;font-size:10pt;">
								<strong>To Warehouse:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.to_location" />
							</td>
						</tr>

						<tr>
							<td style="border:0pt;font-size:10pt;">
								<strong>From Date of Return:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.return_date" />
							</td>
							<td style="border:0pt;font-size:10pt;">
								<strong>To Date of Return:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.to_return_date" />
							</td>
							<td style="border:0pt;font-size:10pt;">
								<strong>Branch:</strong>
							</td>
							<td style="border:0pt;font-size:10pt;">
								<span t-field="o.branch_id" />
							</td>
						</tr>

					</table>

					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Product Name</th>
								<th>Product Code</th>
								<th class="text-right">Issued Qty</th>
								<th class="text-right">Sales Qty</th>
								<th class="text-right">FOC Qty</th>
								<th class="text-right">Returned Qty(B/S)</th>
								<th class="text-right">Received Qty(B/S)</th>
								<th>Expiry</th>
								<th>Remark</th>
							</tr>
						</thead>
						<tbody class="invoice_tbody">
							<tr t-foreach="o.p_line.sorted(key=lambda b: b.product_id.name_template)" t-as="l">
								<td>
									<span t-field="l.product_id" />
								</td>
								<td>
									<span t-field="l.product_code" />
								</td>								
								<td class="text-right">
									<span t-field="l.receive_quantity" />
								</td>
								<td class="text-right">
									<span t-field="l.sale_quantity" />
								</td>
								<td class="text-right">
									<span t-field="l.foc_quantity" />
								</td>
								<td class="text-right">
									<span t-field="l.return_quantity" />
								</td>
								<td class="text-right">
									<span t-field="l.rec_small_quantity" />
								</td>
								<td>
									<span t-field="l.expiry_date" />
								</td>
								<td>
									<span t-field="l.remark" />
								</td>
							</tr>
						</tbody>
					</table>

					<table class="table table-condensed">
						<thead>
							<tr>
								<th></th>
								<th>Returned By</th>
								<th>Checked By</th>
								<th>Received By</th>

							</tr>
						</thead>
						<tbody class="invoice_tbody">
							<tr t-foreach="o" t-as="l">
								<td>Name</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td>Position</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td>Signature</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td>Date</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
						</tbody>
					</table>
				</div>
			</t>
		</template>

		<template id="stock_return_note">
			<t t-call="report.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t
						t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'stock_requisition.stock_return_note_document')" />
				</t>
			</t>
		</template>
	</data>
</openerp>
