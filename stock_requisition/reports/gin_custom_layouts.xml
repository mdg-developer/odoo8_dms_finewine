<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>


		<template id="style">
			body {
			color: #000 !important;
			word-wrap:
			break-word;
			}
			.border-black td {
			border-top: 1pt solid black !important;
			}
			.table-condensed > thead > tr > th {
			border-bottom: 1pt solid black
			!important;
			}
			.table-condensed > tbody > tr {
			page-break-inside: avoid
			!important;
			}
			.zero_min_height {
			min-height: 0pt !important;
			}
		</template>

		<template id="gin_custom_layout">
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>

			<t t-call="stock_requisition.gin_custom_layout_header" />
			<t t-raw="0" />
			<t t-call="stock_requisition.gin_custom_layout_footer" />
		</template>
		
		<template id="gin_custom_layout_header">
		    <div class="header">
				<div class="col-xs-1">
					<center>
						<!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
							style="max-height: 50pt;" /> -->
						<img src="/sale_management/static/description/AMH_Header.png"
							style="max-height: 250pt;width:700px;" /><br/>
						<img src="/sale_management/static/description/AMH_Address.png"
						style="max-height: 250pt;width:700px;" />
					</center>
				</div>
				
				<div class="row zero_min_height">
		            <div class="col-xs-12">
		                <div style="border-bottom: 1px solid black;"></div>
		            </div>
		        </div>
			</div>
		</template>

		<template id="gin_custom_layout_footer">
			<div class="footer" style="border-top: 1px solid black;">
				<div class="text-left" >
					<strong>FO-ST-07 REV-00</strong>
				</div>
			</div>
		</template>
	</data>
</openerp>
