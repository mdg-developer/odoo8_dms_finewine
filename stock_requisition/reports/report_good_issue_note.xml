<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_good_issue_note_document">
			<t t-call="stock_requisition.gin_custom_layout">
				<div class="page">
					<!-- <div class="row" style="padding-top:-2s0pt;">
						<center>
							<img src="/sale_management/static/description/AMH_Header.png"
								style="max-height: 250pt;width:700px;" />
							<br />
							
						</center>

					</div> -->
					<br />
					<h3>
						<p>Good Issue Note</p>
					</h3>
					<br />
					<table class="table"
						style='border:solid;border-color:white;margin-top:-20pt;'>
						<tr style='border:solid;border-color:white;'>
							<td style="line-height: .4;">
								<strong>Date for Issue:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.issue_date" t-field-options='{"format": "dd/MM/yyyy"}' />
							</td>
							<td style="line-height: .4;">
								<strong>Vehicle No:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.vehicle_id.model_id.brand_id.name" />
								<span t-if="o.vehicle_id.model_id.modelname">
									<b>/</b>
								</span>
								<span t-field="o.vehicle_id.model_id.modelname" />
								<!-- <span t-if="o.vehicle_id.license_plate"><b>/</b></span> <span 
									t-if="o.vehicle_id.license_plate"/> -->
							</td>
						</tr>

						<tr style='border:solid;border-color:white;'>
							<td style="line-height: .4;">
								<strong>(GIN)Ref:No:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.name"></span>
							</td>

							<td style="line-height: .4;">
								<strong>(RFI)Ref:No:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.request_id" />
							</td>
						</tr>

						<tr style='border:solid;border-color:white;'>
							<td style="line-height: .4;">
								<strong>Issue From:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.to_location_id.location_id.name" />
								<b>/</b>
								<span t-field="o.to_location_id.name" />
							</td>
							<td style="line-height: .4;">
								<strong>Issue To:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.from_location_id.location_id.name" />
								<b>/</b>
								<span t-field="o.from_location_id.name" />
							</td>


						</tr>

						<tr style='border:solid;border-color:white;'>
							<td style="line-height: .4;">
								<strong>Issue By:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.issue_by" />
							</td>

							<td style="line-height: .4;">
								<strong>Requested By:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.request_by" />
							</td>
						</tr>

						<tr style='border:solid;border-color:white;'>
							<td style="line-height: .4;">
								<strong>Approved By:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.approve_by" />
							</td>

							<td style="line-height: .4;">
								<strong>Received By:</strong>
							</td>
							<td style="line-height: .4;">
								<span t-field="o.receive_by" />
							</td>

							<!-- <td> <strong>Company:</strong> </td> <td> <p t-field="o.company_id.name"/> 
								</td> -->
						</tr>

					</table>

					<table class="table table-condensed">
						<thead>
							<tr style="background-color:#0052cc;color:#ffffff;" height="10pt;">
								<th>Product</th>
								<th>Quantity(B/S)</th>
								<th>UOM(B/S)</th>
								<th>Batch No</th>
								<th>Expiry</th>
								<th>Remark</th>
							</tr>
						</thead>
						<tbody class="invoice_tbody">
							<tr t-foreach="o.p_line" t-as="l">
								<td>
									<span t-field="l.product_id" />
								</td>
								<td>
									<span t-field="l.big_issue_quantity" />
									/
									<span t-field="l.issue_quantity" />
								</td>
								<td>
									<span t-field="l.big_uom_id.name" />
									/
									<span t-field="l.product_uom.name" />
								</td>
								<td>
									<span t-field="l.batch_no.name" />
								</td>
								<td>
									<span t-field="l.expiry_date" />
								</td>
								<td>
									<span t-field="l.remark" />
								</td>
							</tr>
						</tbody>
					</table>

					<table class="table table-condensed">
						<thead>
							<tr>
								<th></th>
								<th>Issued By</th>
								<th>Approved By</th>
								<th>Received By</th>

							</tr>
						</thead>
						<tbody class="invoice_tbody">
							<tr height="50">
								<td>Signature</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td>Name</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td>Position</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
							<tr>
								<td>Date</td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
						</tbody>
					</table>
					<br/>
					<!-- <strong>FO-ST-07 REV-00</strong> -->
				</div>
				</t>
		</template>

		<template id="good_issue_note">
			<t t-call="report.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t
						t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'stock_requisition.report_good_issue_note_document')" />
				</t>
			</t>
		</template>
	</data>
</openerp>
