<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="action_view_hr_payslip_form_management" model="ir.actions.act_window">
            <field name="name">Management Payslips</field>
            <field name="res_model">hr.payslip</field>
            <field name="view_type">form</field>
            <field name="domain">[('is_management','=','True')]</field>
            <field name="view_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="search_view_id" ref="hr_payroll.view_hr_payslip_filter"/>
        </record>

        <menuitem action="action_view_hr_payslip_form_management" id="menu_hr_payslip_form_management" parent="hr_payroll.menu_hr_root_payroll" groups="base.group_hr_manager" sequence="1"/>
         
		<record model="ir.ui.view" id="view_hr_payslip_customize_form_management">
			<field name="name">hr.payslip.view.form</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
			<field name="arch" type="xml">
                <field name="name" position="after">
			        <field name="is_management"/>
			    </field>
			</field>
		</record>                   
    </data>
</openerp>
